{
  "name": "ljv-alumni",
  "version": "1.0.0",
  "description": "Site web des anciens BTS SN/CIEL LJV",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:unit": "jest tests/unit --runInBand",
    "test:integration": "jest tests/integration --runInBand",
    "test:integration:conn": "npm run test:integration -- -t \"should connect to the database and retrieve tables\"",
    "test:integration:tx": "npm run test:integration -- -t \"should insert a new section and roll it back|should confirm previous section insertion was rolled back\"",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:backup": "node scripts/backup.js",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:production": "./scripts/deploy.sh production"
  },
  "keywords": [
    "alumni",
    "express",
    "mysql",
    "nodejs"
  ],
  "author": "LJV",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "i18n": "^0.15.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.1"
  },
  "devDependencies": {
    "eslint": "^8.49.0",
    "jest": "^30.0.4",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.3"
  },
  "engines": {
    "node": ">=20.0.0 <21.0.0"
  }
}
