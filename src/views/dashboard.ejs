<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><%= __('Tableau de bord') %></h1>
            <span class="text-muted"><%= __('Bienvenue', { prenom: user.prenom }) %> !</span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-people text-primary" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3"><%= __('Annuaire') %></h5>
                <p class="card-text"><%= __('Parcourez la liste des anciens étudiants') %></p>
                <a href="/users" class="btn btn-primary">
                    <i class="bi bi-search"></i> <%= __('Consulter') %>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-building text-success" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3"><%= __('Employeurs') %></h5>
                <p class="card-text"><%= __('Découvrez où travaillent les anciens') %></p>
                <a href="/users/employers/list" class="btn btn-success">
                    <i class="bi bi-building"></i> <%= __('Voir la liste') %>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-person-circle text-warning" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3"><%= __('Mon profil') %></h5>
                <p class="card-text"><%= __('Gérez vos informations personnelles') %></p>
                <a href="/profile" class="btn btn-warning">
                    <i class="bi bi-person"></i> <%= __('Voir mon profil') %>
                </a>
            </div>
        </div>
    </div>
</div>