<div class="min-vh-100 d-flex align-items-center bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body text-center p-5">
                        <% if (typeof error !== 'undefined' && error && error.status === 404) { %>
                        <i class="bi bi-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
                        <% } else { %>
                        <i class="bi bi-x-circle text-danger" style="font-size: 4rem;"></i>
                        <% } %>
                        
                        <h1 class="h3 mt-3 mb-3"><%= message %></h1>
                        
                        <% if (typeof error !== 'undefined' && error && process.env.NODE_ENV === 'development') { %>
                        <div class="alert alert-danger text-start mt-4">
                            <h6>Détails de l'erreur (mode développement) :</h6>
                            <pre class="mb-0"><%= error.stack || error %></pre>
                        </div>
                        <% } %>
                        
                        <div class="mt-4">
                            <% if (typeof isLoggedIn !== 'undefined' && isLoggedIn) { %>
                            <a href="/dashboard" class="btn btn-primary me-2">
                                <i class="bi bi-house"></i> Retour à l'accueil
                            </a>
                            <% } else { %>
                            <a href="/login" class="btn btn-primary me-2">
                                <i class="bi bi-box-arrow-in-right"></i> Se connecter
                            </a>
                            <% } %>
                            
                            <button onclick="history.back()" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Retour
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
