<div class="container-fluid">
    <h1 class="mb-4"><%= __('admin.statistics.title') %></h1>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header"><%= __('admin.statistics.generalStats.cardHeader') %></div>
                <div class="card-body">
                    <p><strong><%= __('admin.statistics.generalStats.totalUsers') %></strong> <%= stats.total_users %></p>
                    <p><strong><%= __('admin.statistics.generalStats.pendingRequests') %></strong> <%= stats.pending_requests %></p>
                    <p><strong><%= __('admin.statistics.generalStats.totalEmployers') %></strong> <%= stats.total_employers %></p>
                    <p><strong><%= __('admin.statistics.generalStats.currentEmployments') %></strong> <%= stats.current_employments %></p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header"><%= __('admin.statistics.usersByGraduationYear.cardHeader') %></div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <% yearStats.forEach(stat => { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <%= __('admin.statistics.usersByGraduationYear.year') %> <%= stat.annee_diplome %>
                                <span class="badge bg-primary rounded-pill"><%= stat.count %></span>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 mb-4">
            <div class="card h-100">
                <div class="card-header"><%= __('admin.statistics.usersBySection.cardHeader') %></div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <% sectionStats.forEach(stat => { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <%= stat.nom %>
                                <span class="badge bg-primary rounded-pill"><%= stat.count %></span>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <a href="/admin" class="btn btn-secondary mt-3"><%= __('admin.statistics.backToDashboard') %></a>
</div>